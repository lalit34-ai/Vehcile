@model LoginEmployee
@{
  ViewData["Title"] = "Login";

}
<body background="https://i0.wp.com/www.techawkng.com/wp-content/uploads/2020/07/Ridesharing.jpg?w=1920&ssl=1"
  style="background-repeat:no-repeat; background-size: cover">
  @section Scripts
    {
    @{
      <Partial name="_ValidationScriptsPartial" />
    }
  }
  <div style="padding-left:85px;padding-top:50px;">
    <p style="color:white;font-family:Georgia, serif;padding-left:80px">LOGIN</p>
    <form method="post" id="form2"
      style="border:black;border-width:1px; border-style:outset; padding: 10px 10px 10px 10px; width:222px;">
      <!-- Mail input -->
      <div class="form-outline mb-4">
        <input type="email" id="form2Example2" class="form-control" style="width:200px" placeholder="text"
          asp-for="EmployeeID" autocomplete="off" required />
        <span asp-validation-for="EmployeeID" class="text-danger" style="color:white;font-family:Georgia, serif"></span>
      </div>

      <br>

      <!-- Password input -->
      <div class="form-outline mb-4">
        <input type="Password" id="form2Example3" class="form-control" style="width:200px" placeholder="Password"
          asp-for="Password"
          title="Atleast 8 characters. Atleast one uppercase letter, one lowercase letter and one number" required />
        <span asp-validation-for="Password" class="text-danger" style="color:white;font-family:Georgia, serif"></span>
      </div>

      <p style="color:white;font-family:Georgia, serif;"><input type="checkbox" onclick="myFunction()"> Show Password
      </p>
      <script>
        function myFunction() {
          var x = document.getElementById("form2Example3");
          if (x.type === "Password") {
            x.type = "text";
          } else {
            x.type = "Password";
          }
        }
      </script>

      <!-- Submit button -->
      <button type="submit" class="btn btn-primary btn-block mb-4" style="width:200px">Login</button>

    </form>
    <br>
    <a style="color:white;font-family:Georgia, serif;padding-left:50px;" href="/Home/Forgot">Forgot Password?</a>
    <br>
    <br>
    <p style="color:white;font-family:Georgia, serif;padding-left:30px">Not a user? <a style="color:white;"
        asp-controller="Home" asp-action="signup">Register Here</a></p>
    <br> 
    <p style="text-align:center; width:200px; word-break:keep-all; color:white;font-family:Georgia, serif">
      @ViewBag.message</p>
  </div>
</body>

