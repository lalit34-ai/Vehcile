
@model IEnumerable<VEHCILE.Models.Bus>

@{
    ViewData["Title"]="Bus";
}

<style>
    body{
        background-image: url("https://assets.dmagstatic.com/wp-content/uploads/media/2731020/vonlane1.jpg?cropUpAlias=wide_4-12&width=330");
        @* background-color: #6c757d; *@
    }
    table.text-info text-center{

        margin-left: auto; 
        margin-right: auto;
    }
</style>

<div class="container" style="background-color: #e9ecef;>
    <div class="row"  style="color:white">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="d-flex justify-content-between nb-3 p-3">
                    <h3 class="text-info"> Bus List</h3>
                    @Html.ActionLink("Add Bus","Add","Bus",null)
                </div>
                <div class="p-3">
                    <table class="table table responsive table-bordered text-info text-center" >
                        <thread>
                            <tr>
                                @* <th>ID</th> *@
                                <th>BusType</th>
                                <th>BusNumber</th>
                                <th>SeatingCapacity</th>
                                <th>FuelType</th>
                                <th>PickUp</th>
                                <th>DropOff</th>
                                <th>Edit</th>
                                <th>Delete</th>
                            </tr>
                        </thread>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                @* <td>@item.BusID</td> *@
                                <td>@item.BusType</td>
                                <td>@item.BusNumber</td>
                                <td>@item.SeatingCapacity</td>
                                <td>@item.FuelType</td>
                                <td>@item.PickUp</td>
                                <td>@item.DropOff</td>
                                <td><a asp-controller="Bus" asp-action="UpdateBus" asp-route-id=@item.BusNumber>Update</a></td>
                                <td><a asp-controller="Bus" asp-action="DeleteBus" asp-route-id=@item.BusNumber>Delete</a></td>
                                </tr>                                
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
