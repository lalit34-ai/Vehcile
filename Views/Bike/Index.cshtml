@model IEnumerable<VEHCILE.Models.Bike>

@{
    ViewData["Title"]="Bike";
}
<style>
    body{
        background-image: url("https://cdn.wallpapersafari.com/14/68/w4ApYB.jpg");
        @* background-color: #6c757d; *@
    }
    table.text-info text-center{
        margin-left: auto; 
        margin-right: auto;
    }
</style>
<div class="container" style="background-color: #e9ecef;>
    <div class="row">
        <div class="col-12">
            <div class="mt-3 p-3 shadow rounded">
                <div class="d-flex justify-content-between nb-3 p-3">
                    <h3 class="text-info"> Bike List</h3>
                    @Html.ActionLink("Add Bike","Add","Bike",null)
                </div>
                <div class="p-3">
                    <table class="table table responsive table-bordered text-info text-center">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>BikeNumber</th>  
                                <th>PickUp</th>   
                                <th>SeatingCapacity</th>
                                <th>FuelType</th>  
                                <th>DropOff</th>   
                                <th>Edit</th>
                                <th>Delete</th>                      
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <td>@item.Name</td> // BikeType
                                <td>@item.BikeNumber</td>
                                <td>@item.PickUp</td>
                                <td>@item.SeatingCapacity</td>
                                <td>@item.FuelType</td>
                                <td>@item.DropOff</td>
                                <td><a asp-controller="Bike" asp-action="Update" asp-route-id=@item.BikeNumber>UPDATE</a></td>
                                <td><a asp-controller="Bike" asp-action="Delete" asp-route-id=@item.BikeNumber>DELETE</a></td>
                                <br>
                            }
                            <br>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
